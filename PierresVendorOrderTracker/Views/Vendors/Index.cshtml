@using VendorOrderTracker.Models;

@{
  Layout = "_Layout";
}

<h1>Vendors</h1>

@if(Model.Count == 0)
{
  <h3 class="text-warning">No vendors added yet!</h3>
}

<ul class="list-group list-group-flush">
  @foreach (Vendor vendor in Model.Values)
  {
    <li class="list-group-item bg-transparent"><a class="vendor-link" href="/vendors/@vendor.Id">@vendor.Name</a></li>
  }
</ul>

<a class="btn btn-secondary btn-lg m-2" href="/vendors/new">Add Vendor</a>
<a class="btn btn-secondary btn-lg m-2" href="/">Go Home</a>
